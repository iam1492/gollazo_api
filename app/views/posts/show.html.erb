<div id="post_comments">
	<% @post.comments.each do |comment| %>
		<div class="post_comment_wrap">
			<div class="post_comment_profile">
				<img src="<%= comment.profile_thumbnail_url%>" />
			</div>
			<div class="post_comment_profile_text">
				<%= comment.nickname %>
			</div>
		</div>
		<div class="clear"></div>
	<% end %>
</div>

