
<div id="profile_wrap">
	<div id="profile_image">
		<%= image_tag @post.profile_thumbnail_url %>
	</div>
	<div id="profile_text">
		<div id="profile_name">
			<%= @post.name %>
		</div>
		<div id="post_title">
			<%= @post.title %>
		</div>
	</div>
</div>

<div class="clear"></div>

<div id="post_detail">
	<%= @post.description %>
</div>

